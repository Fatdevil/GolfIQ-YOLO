<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.golfiq.wear">

    <uses-feature
        android:name="android.hardware.type.watch"
        android:required="true" />

    <uses-permission android:name="com.google.android.gms.permission.WEARABLE_DATA_LAYER" />

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.golfiq.wear.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />

        <service
            android:name="com.golfiq.wear.data.HudDataLayerListener"
            android:exported="true"
            android:permission="com.google.android.gms.wearable.permission.BIND_LISTENER">
            <intent-filter>
                <!-- Required so GMS can bind -->
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <!-- Filter only our HUD path -->
                <data
                    android:scheme="wear"
                    android:host="*"
                    android:pathPrefix="/golfiq/hud/v1" />
            </intent-filter>
        </service>

        <service
            android:name="com.golfiq.wear.tile.HudTileService"
            android:label="@string/hud_tile_label"
            android:exported="true"
            android:permission="com.google.android.wearable.permission.BIND_TILE_PROVIDER">
            <intent-filter>
                <action android:name="androidx.wear.tiles.action.BIND_TILE_PROVIDER" />
            </intent-filter>
        </service>

    </application>

</manifest>
